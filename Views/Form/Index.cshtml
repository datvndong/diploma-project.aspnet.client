@using CentralizedDataSystem.Models;
@using CentralizedDataSystem.Resources;
@{
    Layout = "~/Views/Shared/MainLayout.cshtml";

    List<Form> forms = new List<Form>();
    if (ViewBag.List != null) {
        forms = ViewBag.List;
    }
    int formsSize = forms.Count;

    int currPage = ViewBag.CurrPage;
    int totalPages = ViewBag.TotalPages;

    string deleteMess = null;
    bool deleteStatus = false;
    string deleteClass = null;
    if (TempData[Keywords.DELETE] != null && TempData[Keywords.DELETE_STATUS] != null) {
        deleteMess = TempData[Keywords.DELETE].ToString();
        deleteStatus = (bool)TempData[Keywords.DELETE_STATUS];
        deleteClass = deleteStatus ? Keywords.SUCCESS : Keywords.DANGER;
    }

    string importMess = null;
    bool importStatus = false;
    string importClass = null;
    if (TempData[Keywords.IMPORT] != null) {
        importMess = TempData[Keywords.IMPORT].ToString();
        importStatus = importMess.Equals(Messages.IMPORT_SUCCESSFUL);
        importClass = importStatus ? Keywords.SUCCESS : Keywords.DANGER;
    }
}

@Styles.Render("~/Content/pagination.css")
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        @if (deleteMess != null) {
                            <div class="alert-@deleteClass" style="padding: 10px; font-size: 15px; border-radius: 4px; margin-bottom: 10px">
                                @deleteMess
                            </div>
                        }
                        @if (importMess != null) {
                            <div class="alert-@importClass" style="padding: 10px; font-size: 15px; border-radius: 4px; margin-bottom: 10px">
                                @importMess
                            </div>
                        }
                        <h4 class="card-title">Forms Table</h4>
                        <p class="card-description">
                            Note: <code style="font-size: 100%">click row to show submissions of form</code>
                        </p>
                        <form action="/Survey/Upload" enctype="multipart/form-data" method="post">
                            <div class="input-group col-xs-12">
                                <input type="file" name="file" class="form-control file-upload-info" />
                                <span class="input-group-append">
                                    <button class="file-upload-browse btn btn-info" type="submit">
                                        <i class="mdi mdi-upload"></i>Import
                                    </button>
                                </span>
                            </div>
                        </form>
                        <div class="table-responsive">
                            <table id="forms-table" class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Title</th>
                                        <th>Name</th>
                                        <th>Progress</th>
                                        <th>Submissions</th>
                                        <th>Tags</th>
                                        <th>Schedule</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < formsSize; i++) {
                                        <tr>
                                            <td>@i</td>
                                            <td>@forms[i].Title</td>
                                            <td>@forms[i].Name</td>
                                            <td>
                                                <div class="progress">
                                                    <div id="bar-@i" class="progress-bar bg-@forms[i].TypeProgressBar" role="progressbar" style="width: 0%"></div>
                                                </div>
                                            </td>
                                            <td>@forms[i].Amount</td>
                                            <td>
                                                @{
                                                    List<string> tags = forms[i].Tags;
                                                    int tagsSize = tags.Count;
                                                }
                                                @for (int j = 0; j < tagsSize; j++) {
                                                    if (j == tagsSize - 1) {
                                                        <label>@tags[j]</label>
                                                    } else {
                                                        <label>@tags[j], </label>
                                                    }
                                                }
                                            </td>
                                            <td>
                                                From:&ensp;@forms[i].Start
                                                <br />
                                                --------------------------
                                                <br />
                                                To:&ensp;&ensp;&emsp;@forms[i].Expired
                                            </td>
                                            <td>
                                                @if (forms[i].Amount == 0 && forms[i].DurationPercent != 100) {
                                                    <a id="edit-@i" href="@Url.Action(Keywords.EDIT, Keywords.FORM, new { path = forms[i].Path })" class="btn btn-primary" title="Edit">
                                                        <span class="mdi mdi-tooltip-edit"></span>
                                                    </a>
                                                }
                                                <a href="#" data-toggle="modal" data-target="#modal-warning-@i" class="btn btn-danger" title="Delete">
                                                    <span class="mdi mdi-delete"></span>
                                                </a>
                                                <div class="modal modal-warning fade in" id="modal-warning-@i" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h3 class="modal-title custom_align" id="Heading"><span class="mdi mdi-alert"></span>&nbsp;Delete this entry</h3>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">×</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <h5 class="alert alert-danger"><span class="mdi mdi-comment-alert-outline"></span>&nbsp;Are you sure you want to delete this record?</h5>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                                                                <a style="color: white" type="button" class="btn btn-info" href="@Url.Action(Keywords.DELETE, Keywords.FORM, new { path = forms[i].Path })">Yes</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                @if (forms[i].IsAnonymousForm) {
                                                    <button onclick="copyLink('@forms[i].Path')" href="/send/anon/report/@forms[i].Path" class="btn btn-warning" title="Copy link">
                                                        <span class="mdi mdi-content-copy"></span>
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="pagination" id="pagination"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Scripts/pagination.js")
<script>
    const serverURL = `${window.location.protocol}//${window.location.hostname}:${window.location.port}`;
    createPagination(@totalPages, @currPage, `${serverURL}/Form/Index/`);

    function copyLink(path) {
        const dummy = document.createElement('input');
        dummy.style = 'position: absolute; left: -1000px; top: -1000px';
        dummy.value = `${serverURL}/Send/Anon/Report/${path}`;
        document.body.appendChild(dummy);
        dummy.select();
        document.execCommand('copy');
        document.body.removeChild(dummy);
        alert('Link copied to clipboard');
    }

    $(document).ready(() => {
        const arrPath = [];

        @for (int i = 0; i < formsSize; i++) {
            <text>
                $('#bar-@i').css('width', '@forms[i].DurationPercent%');
                arrPath.push('@forms[i].Path');
            </text>
        }

        $('#forms-table tr').each(function (i, e) {
            if (i === 0) {
                // <tr> in <thead>
                return;
            }
            // Prevent send request when click edit or delete button inside last column in row
            // (if don't prvent will cause exception 404 after delete form)
            $(e).children('td:not(:last)').click(function () {
                window.location.href = `${serverURL}/Submission/Index/${arrPath[i - 1]}/1`;
            });
        });
    });
</script>
