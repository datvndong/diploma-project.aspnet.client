@using CentralizedDataSystem.Models;
@using CentralizedDataSystem.Resources;
@{
    Layout = "~/Views/Shared/MainLayout.cshtml";

    List<Group> groups = new List<Group>();
    if (ViewBag.List != null) {
        groups = ViewBag.List;
    }
    int groupsSize = groups.Count;

    int currPage = ViewBag.CurrPage;
    int totalPages = ViewBag.TotalPages;

    Group root = null;
    if (ViewBag.Root != null) {
        root = (Group)ViewBag.Root;
    }
}

@Styles.Render("~/Content/pagination.css")
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        @*<th:block th:if="${importMess}">
                                <div th:if="${importStatus}" th:text="${importMess}" class="alert-success" style="padding: 10px; font-size: 15px; border-radius: 4px; margin-bottom: 10px"></div>
                                <div th:unless="${importStatus}" th:text="${importMess}" class="alert-danger" style="padding: 10px; font-size: 15px; border-radius: 4px; margin-bottom: 10px"></div>
                            </th:block>*@
                        <h4 class="card-title">Groups Table</h4>
                        <div class="row">
                            <div class="col-lg-2">
                                <a class="btn btn-info btn-block" href="@Url.Action(Keywords.CREATE, Keywords.GROUP)">
                                    New Group
                                    <i class="mdi mdi-plus"></i>
                                </a>
                            </div>
                            <div class="col-lg-10">
                                <form action="#" @*th:action="@{/groups/read}" th:object="${importFile}"*@ enctype="multipart/form-data" method="post">
                                    <div class="input-group col-xs-12">
                                        <input type="file" class="form-control file-upload-info" th:field="*{fileDatas}" />
                                        <span class="input-group-append">
                                            <button class="file-upload-browse btn btn-warning" type="submit">
                                                <i class="mdi mdi-upload"></i>Import
                                            </button>
                                        </span>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <br />
                        <div class="table-responsive">
                            <table id="root-group-table" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>IdGroup</th>
                                        <th>Group</th>
                                        <th>Number of Child Groups</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>0</td>
                                        <td>@root.IdGroup</td>
                                        <td>@root.Name</td>
                                        <td>@root.NumberOfChildrenGroup</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <br /><hr /><br />
                        <div class="table-responsive">
                            <table id="groups-table" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>IdGroup</th>
                                        <th>Group</th>
                                        <th>Parent</th>
                                        <th>Number of Child Groups</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < groupsSize; i++) {
                                        <tr>
                                            <td>@i</td>
                                            <td>@groups[i].IdGroup</td>
                                            <td>@groups[i].Name</td>
                                            <td>@groups[i].NameParent</td>
                                            <td>@groups[i].NumberOfChildrenGroup</td>
                                            <td>
                                                <a id="edit-@i" href="@Url.Action(Keywords.EDIT, Keywords.GROUP, new { id = groups[i].Id })" class="btn btn-primary" title="Edit">
                                                    <span class="mdi mdi-tooltip-edit"></span>
                                                </a>
                                                @if (@groups[i].NumberOfChildrenGroup != 0) {
                                                    <a href="/group/Index/@groups[i].IdGroup/1" class="btn btn-warning" title="Details">
                                                        <span class="mdi mdi-details"></span>
                                                    </a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="pagination" id="pagination"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Scripts/pagination.js")
<script>
    const serverURL = `${window.location.protocol}//${window.location.hostname}:${window.location.port}`;
  	const idParent = "@root.IdGroup";
  	createPagination(@totalPages, @currPage, `${serverURL}/group/Index/${idParent}/`);
</script>

